{
	"version": "2.0.0",
	"tasks": [
		{
			"type":"shell",
			"label": "win32 copy dll files",
			"command":"xcopy",
			"args":[
				"dep\\lib\\win32\\*",
				"bin\\",
				"/Y",
				"/D"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"type": "shell",
			"label": "build win32",
			"command": "C:\\MinGW\\bin\\g++.exe",
			"args": [
				"-g",
				// "${file}",
				"src/**.cpp",
				"src/vendor/imgui/**.cpp",
				"-o",
				"${workspaceFolder}\\bin\\cherno-opengl.exe",

				"-L\"C:\\OpenGL\\lib\\Release\\Win32\"",
				"-L\"C:\\ProgramData\\chocolatey\\lib\\glfw3\\tools\\glfw-3.0.4.bin.WIN32\\lib-mingw\"",
				
				"-I\"C:\\ProgramData\\chocolatey\\lib\\glfw3\\tools\\glfw-3.0.4.bin.WIN32\\include\\GLFW\"",
				"-I\"C:\\OpenGL\\include\"",
				"-I\"${workspaceFolder}\\src\"",
				"-I\"${workspaceFolder}\\src\\vendor\\imgui\"",
				
				"-lglfw3", // this is the .dll file
				"-l:glfw3dll.a", // the colon is needed because the library doesn't start with "lib"
				"-lgdi32", // apparently needed when static linking glfw3
				"-lglu32",
				"-lglew32", // opengl extension loader
				"-lopengl32", // apparently needed when static linking glfw3?
				"-Wall",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"dependsOn":[
				"win32 copy dll files"
			],
		}
	]
}